include header.pug


.login-form
    form(action="/register" method="POST")
        h2.text-center Sign Up
        .form-group
            input.form-control(type="text" name="username" placeholder="Username" required)
        .form-group
            input.form-control(type="password" name="password" placeholder="Password" required)
        .form-group
            button.btn.btn-primary.btn-block(type="submit") Sign Up
include footer.pug
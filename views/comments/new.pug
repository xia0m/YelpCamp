
include ../header.pug

.container
    .row
        h1(style="text-align:center") Add New Comment to #{campground.name}
        div(style="width:30%;margin:25px auto")
            form(action="/campgrounds/"+ campground._id+"/comments" method="POST")
                .form-group
                    input(class="form-control" type="text",name="comment[text]",placeholder="Text")
                .form-group
                    input(class="form-control" type="text",name="comment[author]",placeholder="Author")
                
                .form-group
                    button.btn.btn-lg.btn-primary.btn-block Submit!
                a(href="/campgrounds") Go Back
include ../footer.pug